me="elklib-config-@target_cpu@"
debug="no"

function debug {
    if test "$debug" == "yes" ; then
	echo "$me: DEBUG: $1"
    fi
}

function error {
    echo "$me: $1"
}

function hint {
    echo "Try \`$me -h' for more information."
}

function usage {
    cat <<EOF 1>&2
Usage: elklib-config [OPTIONS]

Options:
    [-h|--help]
    [--version]
    [--static-libs]
    [--cppflags]
    [--cflags]
    [--cxxflags]
    [--ldflags]
EOF
}

#
# Main
#
if test $# -eq 0 ; then
    error "Missing parameter"
    hint
    exit 1
fi

missing_action="yes"
echo_static_libs="no"
echo_cppflags="no"
echo_cflags="no"
echo_cxxflags="no"
echo_ldflags="no"
while test $# -gt 0 ; do
    case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
    esac

    case $1 in
	-h|--help)
	    usage
	    exit 0
	    ;;
	--version)
	    echo @PACKAGE_VERSION@
	    exit 0
	    ;;
	--static-libs)
	    echo_static_libs="yes"
	    ;;
	--cppflags)
	    echo_cppflags="yes"
	    ;;
	--cflags)
	    echo_cflags="yes"
	    ;;
	--cxxflags)
	    echo_cxxflags="yes"
	    ;;
	--ldflags)
	    echo_ldflags="yes"
	    ;;
	*)
	    error "Unknown option \`$1'"
	    hint
	    exit 1
	    ;;
    esac
    shift
done

if test "$echo_static_libs" == "yes" ; then
    missing_action="no"
    echo "@libdir@/libelk-@target_cpu@.a /usr/lib/gcc/i686-pc-linux-gnu/4.1.2/libgcc_eh.a /usr/lib/gcc/i686-pc-linux-gnu/4.1.2/libstdc++.a /usr/lib/gcc/i686-pc-linux-gnu/4.1.2/libsupc++.a $output"
fi

if test "$echo_cppflags" == "yes" ; then
    missing_action="no"
#    echo "-I@pkgvincludedir@ @AX_CONFIG_CPPFLAGS@"
    echo "-I@pkgvincludedir@"
fi

if test "$echo_cflags" == "yes" ; then
    missing_action="no"
#    echo "-I@pkgvincludedir@ @AX_CONFIG_CFLAGS@"
    echo "-I@pkgvincludedir@"
fi

if test "$echo_cxxflags" == "yes" ; then
    missing_action="no"
#    echo "-I@pkgvincludedir@ @AX_CONFIG_CXXFLAGS@"
    echo "-I@pkgvincludedir@"
fi

if test "$echo_ldflags" == "yes" ; then
    missing_action="no"
    echo "@AX_CONFIG_LDFLAGS@"
    echo ""
fi

if test "$missing_action" == "yes" ; then
    error "Missing parameter(s)"
    hint
    exit 1
fi

exit 0
