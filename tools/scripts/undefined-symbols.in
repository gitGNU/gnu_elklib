use strict;
use warnings;

my $program = "undefined-symbols";

while (<STDIN>) {
    s/[ \t]+/ /;
    s/^[ ]*//;
    s/[ ]*$//;
    
    if ($_ =~ m/^[a-zA-Z0-9_\-\.]+:$/) {
	# Skip library declaration
    } elsif ($_ =~ m/^([0-9a-fA-F]+) (.) (.*)+$/) {
	my $address = $1;
	my $type    = $2;
	my $symbol  = $3;
	print STDERR "$program: Got defined symbol $type:$symbol:$address\n";
    } elsif ($_ =~ m/^U[ ]+(.*)$/) {
	my $symbol = $1;
	print STDERR "$program: Got undefined symbol $symbol\n";
    } elsif ($_ =~ m/^$/) {
	# Skip empty lines
    } else {
	print STDERR "$program: Unhandled input line \`" . $_ . "'\n";
	exit 1;
    }
}

exit 0;
