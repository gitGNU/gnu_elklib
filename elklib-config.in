me="elklib-config"

usage="\
Usage: elklib-config [--help] [--version]  [--libdir] [--includedir] [--cflags] [--cxxflags] [--ldflags]"

if test $# -eq 0; then
    echo "${usage}" 1>&2
    exit 1
fi

while test $# -gt 0; do
    case "$1" in
	-*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
	*) optarg= ;;
    esac

    case $1 in
	--help)
	    echo "${usage}" 1>&2
	    exit 0
	    ;;
	--version)
	    echo @PACKAGE_VERSION@
	    exit 0
	    ;;
	--libdir)
	    echo "@libdir@"
	    exit 0
	    ;;
	--includedir)
	    echo "@includedir@"
	    exit 0
	    ;;
	--cflags)
	    exit 0
	    ;;
	--cxxflags)
	    exit 0
	    ;;
	--ldflags)
	    exit 0
	    ;;
	*)
	    echo "${usage}" 1>&2
	    exit 1
	    ;;
    esac
    shift
done

exit 0;
